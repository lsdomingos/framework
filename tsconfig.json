{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "skipLibCheck" : true,
    "baseUrl": ".",
    "paths": {
      "@tscircle/config/*": ["./application/config/*"]
    }
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
